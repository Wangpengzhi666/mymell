<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/HomeTopInclude"
        layout="@layout/inculde_search"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView
            android:id="@+id/Class_list_left"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:scrollbarThumbVertical="@drawable/drawable_list_scrollbar_thumb">
        </ListView>
        <ExpandableListView
            android:background="#11000000"
            android:id="@+id/Class_Expandable"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:groupIndicator="@null"
            >
        </ExpandableListView>
    </LinearLayout>

</LinearLayout>