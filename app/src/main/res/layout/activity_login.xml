<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greySub"
    android:orientation="vertical">
    <include
        android:id="@+id/login_return_title"
        layout="@layout/inculde_return_title"
    />
    <LinearLayout
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/login_fillet">
        <EditText
            android:id="@+id/login_edit_username"
            style="@style/EditText.login"
            android:hint="请输入账号"
            android:drawableLeft="@mipmap/ic_edit_username"
            />
        <EditText
            android:id="@+id/login_edit_password"
            style="@style/EditText.login"
            android:hint="请输入密码"
            android:drawableLeft="@mipmap/ic_edit_password"
        />

    </LinearLayout>

    <TextView
        android:id="@+id/Login_text_login"
        style="@style/Textview.button"
        android:text="登录"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/login_text_zhuce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册账号"
            android:padding="10dp"
            android:textColor="@color/main"/>
        <TextView
            android:id="@+id/login_text_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="找回密码"
            android:padding="10dp"
            android:textColor="@color/main"/>
    </RelativeLayout>



</LinearLayout>